{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path('fos_user_change_password') }}" {{ form_enctype(form) }} method="POST" class="form-horizontal">
    {#{ form_widget(form) }#}
     {{ form_errors(form) }}
     <div class="form-group">
      {{ form_label(form.current_password,null, {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
      {{ form_errors(form.current_password) }}
        <div class="col-sm-4">
          {{ form_widget(form.current_password, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="form-group">
      {{ form_label(form.plainPassword.first,null, {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
      {{ form_errors(form.plainPassword.first) }}
        <div class="col-sm-4">
          {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
      <div class="form-group">
      {{ form_label(form.plainPassword.second,null, {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
      {{ form_errors(form.plainPassword.second) }}
        <div class="col-sm-4">
          {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
     {{ form_rest(form) }}
    <div class="form-group">
       <div class="col-sm-offset-3 col-sm-5">
        <button class="btn btn-primary" type="submit">{{ 'change_password.submit'|trans }} <span class="glyphicon glyphicon-pencil"></span></button>
       </div>
    </div>  
</form>
